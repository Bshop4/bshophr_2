<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
   PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="hr.mapper.ConfigFileFirstKindMapper">
	<resultMap type="ConfigFileFirstKind" id="configFileFirstKindMap" >
		<result property="ffkId"    column="ffk_id"/>
		<result property="firstKindId"    column="first_kind_id"/>
		<result property="firstKindName"    column="first_kind_name"/>
		<result property="firstKindSalaryId"    column="first_kind_salary_id"/>
		<result property="firstKindSaleId"    column="first_kind_sale_id"/>
	</resultMap>

	<select id="selectConfigFileFirstKindAll" resultMap="configFileFirstKindMap">
		select * from config_file_first_kind
	</select>

	<select id="selectConfigFileFirstKind" parameterType="_int" resultMap="configFileFirstKindMap">
		select * from config_file_first_kind where first_kind_sale_id=#{id}
	</select>

	<delete id="deleteConfigFileFirstKind" parameterType="_int">
		delete from config_file_first_kind where first_kind_sale_id=#{id}
	</delete>

	<update id="updateConfigFileFirstKindById" parameterType="ConfigFileFirstKind">
		update ConfigFileFirstKind set first_kind_id=#{firstKindId},first_kind_name=#{firstKindName},first_kind_salary_id=#{firstKindSalaryId},first_kind_sale_id=#{firstKindSaleId} where ffk_id=#{ffkId}
	</update>
	<insert id="insertConfigFileFirstKind" parameterType="ConfigFileFirstKind">
		insert into config_file_first_kind(first_kind_id,first_kind_name,first_kind_salary_id,first_kind_sale_id) 
		values(#{ffkId},#{firstKindId},#{firstKindName},#{firstKindSalaryId},#{firstKindSaleId}) 
	</insert>
</mapper>
